CFLAGS= -Wall -Wextra -std=c99

BIND	= libbind-6.0
LIBDEPS=
LIBFLAGS=
LIBS=

all: nsnotifyd

nsnotifyd: nsnotifyd.c ${LIBDEPS}
	${CC} ${CFLAGS} ${LIBFLAGS} -o nsnotifyd nsnotifyd.c ${LIBS}

${BIND}/libbind.a:
	cd ${BIND} && make all

clean:
	rm -rf nsnotifyd ${BIND}

realclean: clean
	rm -rf Makefile ${BIND}*
